@model IEnumerable<BancoClientes.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

@if (ViewBag.MsgErro != null)
{
    <script type="text/javascript">
        window.onload = function () { alert("@ViewBag.MsgErro"); }
    </script>
}

<h1>Cadastro de Clientes</h1>
<label>Rotina responsável pelo cadastro e consulta de clientes</label>

<p>
    <a asp-action="Create">Adicionar cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naturalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioAtualizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAtualizacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @if (item.Sexo == "M")
                    {
                        <label>Masculino</label>
                    }
                    else if (item.Sexo == "F")
                    {
                        <label>Feminino</label>
                    }
                    else
                    {
                        <label>Outros</label>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nacionalidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naturalidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioAtualizacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAtualizacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id/* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id/* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id/* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
